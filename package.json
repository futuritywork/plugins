{
  "name": "@futurity/plugins",
  "version": "1.0.0",
  "description": "A minimal MCP (Model Context Protocol) server library for Bun with auth forwarding support",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./signing": "./src/signing.ts",
    "./cors": "./src/cors.ts",
    "./oauth": "./src/oauth.ts"
  },
  "scripts": {
    "check": "tsc -b --noEmit",
    "test": "bun test",
    "keygen": "bun run src/keygen.ts",
    "derive-public": "bun run src/derive-public.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "bun",
    "futurity"
  ],
  "author": "Futurity",
  "license": "MIT",
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
